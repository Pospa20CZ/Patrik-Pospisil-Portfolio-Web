@page "{id:int}"
@model Patrik_Pospisil_Portfolio_Web.Pages.DeleteMessageModel
@{
    ViewData["Title"] = "Delete Message";
}

<h2>Delete Message</h2>

@if (Model.Message != null)
{
    <div>
        <p><strong>Name:</strong> @Model.Message.Name</p>
        <p><strong>Email:</strong> @Model.Message.Email</p>
        <p><strong>Content:</strong> @Model.Message.Content</p>
        <p><strong>Date Sent:</strong> @Model.Message.DateSent.ToString("g")</p>
    </div>

    <form method="post">
        <p>Are you sure you want to delete this message?</p>
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-page="/Messages" class="btn btn-secondary">Cancel</a>
    </form>
}
else
{
    <p class="text-danger">Message not found.</p>
}
